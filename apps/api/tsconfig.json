{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ES2023",
    "rootDir": "./",
    "outDir": "./dist",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "useDefineForClassFields": false
  },
  "include": ["src", "generated", "prisma.config.ts", "prisma.config.js"]
}
